<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <EditText
      android:id="@+id/activity_celsius_to_fahrenheit_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="numberDecimal"
      android:layout_margin="8dp"
      android:paddingVertical="20dp"
      android:paddingHorizontal="8dp"
      android:hint="Graus Celsius"/>

  <Button
      android:id="@+id/activity_convert_celsius_submit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text="Converter em Fahrenheit" />

  <TextView
      android:id="@+id/show_celsius_to_fahrenheit_convertion"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="Seu resultado aparecerÃ¡ aqui."
      android:textAlignment="center"
      android:layout_marginVertical="40dp"
      android:textSize="30dp" />


</LinearLayout>